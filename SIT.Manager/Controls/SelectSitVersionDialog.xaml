<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="SIT.Manager.Controls.SelectSitVersionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SIT.Manager.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Select Version"
    FullSizeDesired="False"
    IsPrimaryButtonEnabled="True"
    PrimaryButtonText="Install"
    CloseButtonText="Cancel"
    Height="150"
    MaxWidth="600"
    MinWidth="600">

    <StackPanel>
        <TextBlock Text="Choose the version to install:" Margin="5"/>
        <ComboBox Width="500" Name="VersionBox" HorizontalAlignment="Center" SelectionChanged="VersionBox_SelectionChanged">
            
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding tag_name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
            
        </ComboBox>
    </StackPanel>
</ContentDialog>
